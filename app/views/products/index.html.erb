<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Age</th>
      <th>Brand</th>
      <th>Category</th>
      <th>Cloth type</th>
      <th>Color</th>
      <th>Gender</th>
      <th>Id</th>
      <th>Img url</th>
      <th>Price</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.age %></td>
        <td><%= product.brand %></td>
        <td><%= product.category %></td>
        <td><%= product.cloth_type %></td>
        <td><%= product.color %></td>
        <td><%= product.gender %></td>
        <td><%= product.id %></td>
        <td><%= product.img_url %></td>
        <td><%= product.price %></td>
        <td><%= product.size %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
