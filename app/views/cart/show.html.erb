<div>
    <% if @cart.empty? ==false %>
    <h1>Your Cart Items</h1>
    <% @cart.each do |item| %>
        <div style="padding:20px;display:flex">
        <div>
        <img src=<%= item.img_url %> width="200px" height="250px"/>
        </div>
        <div style="padding:80px;">
        <p>Status: <%= item.status %></p>
        <p>Rs. <%= item.cost %></p>
        <p>Quantity: <%= item.quantity %></p>

        <div style="display:flex">
        <a href="/product_details/<%= item.product_id%>" style="padding-right:20px;">View Details</a>
        <% if current_user.address.to_s.length>30 %>
        <a href="/deliverydetails/update" style="padding-right:20px;">Update delivery address</a>
        <%= form_tag cart_update_path do %>
            <%= hidden_field_tag 'order_id', item.id %>
           <%= submit_tag "Place Order" %>
        <% end %>
        <% else %>
            <a href="/deliverydetails/update" style="padding-right:20px;">Add delivery address</a>
            <p>You need to provide your valid delivery details before placing order.&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>
        <% end %>
        <%= form_tag cart_cancel_path do %>
            <%= hidden_field_tag 'order_id', item.id %>
           <%= submit_tag "Remove from cart" %>
        <% end %>
        </div>


        </div>
        </div>
    <% end %>
    <% else %>
    <h1 align="center">No items in your cart </h1>
    <% end %>
</div>
